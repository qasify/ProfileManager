<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_yellow">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"
            />

    </androidx.appcompat.widget.Toolbar>




    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="15dp">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/v_profile_dp"
                android:src="@drawable/draw_person"
                app:civ_circle_background_color="@color/image_background"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"/>


            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_yellow"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/draw_person"
                    tools:ignore="VectorDrawableCompat"
                    android:contentDescription="TODO"
                    android:background="@color/button_yellow"
                    android:layout_weight="1"/>
                <TextView
                    android:longClickable="false"
                    android:id="@+id/v_profile_firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="10dp"
                    android:layout_gravity="left"
                    android:background="@drawable/round_white"
                    android:hint="First Name"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/black"
                    android:layout_weight="9"
                    android:inputType="textPersonName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_yellow"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/draw_person"
                    tools:ignore="VectorDrawableCompat"
                    android:contentDescription="TODO"
                    android:background="@color/button_yellow"
                    android:layout_weight="1"/>
                <TextView
                    android:longClickable="false"
                    android:id="@+id/v_profile_lastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="10dp"
                    android:layout_gravity="left"
                    android:background="@drawable/round_white"
                    android:hint="Last Name"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/black"
                    android:layout_weight="9"
                    android:inputType="textPersonName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_yellow"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/draw_phone"
                    tools:ignore="VectorDrawableCompat"
                    android:contentDescription="TODO"
                    android:background="@color/button_yellow"
                    android:layout_weight="1"/>

                <TextView
                    android:longClickable="false"
                    android:id="@+id/v_profile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="10dp"
                    android:layout_gravity="left"
                    android:layout_weight="9"
                    android:background="@drawable/round_white"
                    android:gravity="center_vertical"
                    android:hint="03331234567"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_hint"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_yellow"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/draw_mail"
                    tools:ignore="VectorDrawableCompat"
                    android:contentDescription="TODO"
                    android:background="@color/button_yellow"
                    android:layout_weight="1"/>

                <TextView
                    android:longClickable="false"
                    android:id="@+id/v_profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="10dp"
                    android:layout_gravity="left"
                    android:background="@drawable/round_white"
                    android:hint="user@domain.com"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/black"
                    android:layout_weight="9"
                    android:inputType="textEmailAddress"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_yellow"
                android:orientation="horizontal">


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/draw_calendar"
                    tools:ignore="VectorDrawableCompat"
                    android:contentDescription="TODO"
                    android:background="@color/button_yellow"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/v_profile_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="10dp"
                    android:layout_gravity="left"
                    android:layout_weight="9"
                    android:background="@drawable/round_white"
                    android:gravity="center_vertical"
                    android:hint="dd-mm-yyyy"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_hint"
                    android:textSize="20dp"
                    android:longClickable="false" />

            </LinearLayout>

            <Button
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="40dp"
                android:layout_weight="1"
                android:paddingVertical="3dp"
                android:backgroundTint="@color/button_yellow"
                android:background="@drawable/round_light_yellow"
                android:drawableLeft="@drawable/draw_chat"
                android:gravity="center"
                android:text="Chat"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:id="@+id/v_profile_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:gravity="center"
                android:text="Back"
                android:textColor="@color/button_yellow"
                android:textSize="20dp"
                android:id="@+id/v_profile_back"
                android:drawableLeft="@drawable/draw_back"/>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
