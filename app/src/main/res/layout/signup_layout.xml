<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        style="@style/headerText"
        android:id="@+id/temp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="SignUp to"
        android:textSize="20dp" />


    <TextView
        style="@style/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/temp1"
        android:text="@string/profile_manager"
        android:textSize="30dp" />

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_yellow"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:background="@color/button_yellow"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/draw_mail"
                    tools:ignore="VectorDrawableCompat" />

                <EditText

                    android:id="@+id/signup_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="10dp"
                    android:layout_gravity="left"
                    android:layout_weight="9"
                    android:background="@drawable/round_white"
                    android:gravity="center_vertical"
                    android:hint="Enter Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_hint"
                    android:textSize="20dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_yellow"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:background="@color/button_yellow"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/draw_pass"
                    tools:ignore="VectorDrawableCompat" />

                <EditText
                    android:id="@+id/signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="10dp"
                    android:layout_gravity="left"
                    android:layout_weight="9"
                    android:background="@drawable/round_white"
                    android:gravity="center_vertical"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_hint"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_yellow"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:background="@color/button_yellow"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/draw_pass"
                    tools:ignore="VectorDrawableCompat" />

                <EditText
                    android:id="@+id/signup_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="10dp"
                    android:layout_gravity="left"
                    android:layout_weight="9"
                    android:background="@drawable/round_white"
                    android:gravity="center_vertical"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_hint"
                    android:textSize="20dp" />

            </LinearLayout>


            <Button
                android:id="@+id/signup_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_light_yellow"
                android:backgroundTint="@color/button_yellow"
                android:gravity="center"
                android:onClick="onClickSignUpButton"
                android:padding="3dp"
                android:text="Sign Up"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:padding="5dp"
                android:id="@+id/back_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClickSignUpToLogin"
                android:text="Back to Login"
                android:textColor="@color/button_yellow"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
