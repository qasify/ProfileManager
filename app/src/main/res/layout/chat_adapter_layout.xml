<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msg_other_box"
        android:layout_marginStart="4.8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="3dp"
            android:id="@+id/date_tab_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingEnd="5dp">
            <TextView
                android:padding="7dp"
                android:id="@+id/chat_date_other"
                android:background="@drawable/round_gray_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginStart="5.2dp"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/blank1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_light_yellow"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="3dp"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="7dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    tools:ignore="UselessParent">
                    <TextView
                        android:layout_marginEnd="9dp"
                        android:hint="aaaa"
                        android:id="@+id/msg_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/time_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:hint="12:20 PM"
                        android:textSize="10dp"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:id="@+id/blank1"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                />

            <ImageButton
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/draw_c_other"
                android:background="@android:color/transparent"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msg_us_box"
        android:layout_marginEnd="4.8dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_margin="3dp"
            android:id="@+id/date_tab_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="5dp">

        <TextView
            android:id="@+id/chat_date_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_gray_date"
            android:gravity="center"
            android:padding="7dp"
            android:textColor="@color/white"
            android:textSize="15sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginEnd="5.2dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@id/blank2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_light_gray"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="3dp"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="7dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_marginEnd="9dp"
                        android:hint="aaaa"
                        android:id="@+id/msg_us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/time_us"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:hint="12:20 PM"
                        android:textSize="10dp"
                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/blank2"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center" />

            <ImageButton
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/draw_c_us"
                android:background="@android:color/transparent"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>